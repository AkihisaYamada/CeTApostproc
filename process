#!/bin/bash

result=`sed 1q "$1"`
sed -n '1!p' "$1" > "$3/proof"

if [ "$result" = "YES" ]; then
	claim='<terminating/>'
elif [ "$result" = "NO" ]; then
	claim='<nonterminating/>'
else
	claim=''
fi

if [ "$claim" != "" ]; then
	echo $claim > "$3/claim"
	certout=`/usr/bin/time --quiet -f %U -o "$3/certtime" ./ceta "$2" "$3/claim" "$3/proof" 2> $3/certerr`
	certtime=`cat "$3/certtime"`
fi

echo result=$result
echo certification-result=$certout
echo certification-time=$certtime
